source_if_exists() {
    local file_path="$1"

    # Check if file path is provided
    if [[ -z "$file_path" ]]; then
        echo "Error: No file path provided" >&2
        return 1
    fi

    # Check if file exists and is readable
    if [[ -f "$file_path" && -r "$file_path" ]]; then
        # echo "Sourcing file: $file_path"
        source "$file_path"
        return 0
    else
        echo "File does not exist or is not readable: $file_path" >&2
        return 1
    fi
}

source_if_exists ~/.alias_zsh
if [[ "$(uname -s)" == "Darwin" ]]; then
    source_if_exists ~/.alias_mac
fi
source_if_exists ~/.alias_local

# query for all files in the home directory that start with .alias_* and arent .alias_zsh?


